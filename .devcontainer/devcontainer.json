{
  "name": "Ecoma Core COC (Latest)",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:24-bookworm",
  "runArgs": ["--name", "ecoma-core-coc"],
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": "true",
      "installOhMyZsh": "true",
      "configureZshAsDefaultShell": true,
      "installOhMyZshConfig": true
    },
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "version": "latest",
      "moby": true
    },
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/dhoeric/features/hadolint:1": {},
    "ghcr.io/rio/features/k3d:1": {},
    "ghcr.io/devcontainers-extra/features/argo-cd:1": {},
    "ghcr.io/gickis/devcontainer-features/kubeseal:1": {},
    "ghcr.io/rio/features/kustomize:1": {},
    "./features/kubectl-helm": {
      "helm": "3"
    },
    "./features/omz": {
      "preInstalledPlugins": ["git", "git-auto-fetch"],
      "customPlugins": [
        "zsh-syntax-highlighting:https://github.com/zsh-users/zsh-syntax-highlighting.git",
        "you-should-use:https://github.com/MichaelAquilina/zsh-you-should-use.git",
        "zsh-autosuggestions:https://github.com/zsh-users/zsh-autosuggestions/archive/refs/tags/v0.7.1.zip"
      ],
      "deleteInactive": true
    },
    "./features/powerlevel10k": {
      "deletePreinstalledThemes": true
    }
  },
  "appPort": [80, 443],
  "remoteEnv": {
    "PATH": "${containerEnv:PATH}:/workspaces/core-devops/bin"
  },
  "postCreateCommand": "sh .devcontainer/post-create.sh",
  "customizations": {
    "vscode": {
      "mcp": {
        "servers": {
          "filesystem": {
            "command": "npx",
            "args": [
              "-y",
              "@modelcontextprotocol/server-filesystem",
              "/workspaces/core-devops"
            ]
          },
          "sequential-thinking": {
            "command": "npx",
            "args": ["-y", "@modelcontextprotocol/server-sequential-thinking"]
          },
          "git": {
            "type": "stdio",
            "command": "npx",
            "args": ["@cyanheads/git-mcp-server@latest"],
            "env": {
              "MCP_TRANSPORT_TYPE": "stdio",
              "MCP_LOG_LEVEL": "info",
              "LOGS_DIR": "/var/log/git-mcp-server/"
            }
          }
        }
      },
      "extensions": [
        "esbenp.prettier-vscode",
        "EditorConfig.EditorConfig",
        "ms-vscode-remote.remote-containers",
        "exiasr.hadolint"
      ],
      "settings": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true,
        "remote.autoForwardPorts": false,
        "terminal.integrated.defaultProfile.linux": "zsh",
        "terminal.integrated.profiles.linux": { "zsh": { "path": "/bin/zsh" } }
      }
    }
  }
}
